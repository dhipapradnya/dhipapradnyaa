import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: WebLayout(),
    );
  }
}

class WebLayout extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Row(
        children: [
          // Sidebar
          Expanded(
            flex: 2,
            child: Container(
              color: Colors.blueGrey[900],
              child: Column(
                children: [
                  SizedBox(height: 20),
                  Text(
                    'Sidebar',
                    style: TextStyle(
                      color: Colors.white,
                      fontSize: 24,
                      fontWeight: FontWeight.bold,
                    ),
                  ),
                  // Tambahkan item sidebar lain di sini
                ],
              ),
            ),
          ),
          // Bagian utama (Header dan Content)
          Expanded(
            flex: 8,
            child: Column(
              children: [
                // Header
                Container(
                  color: Colors.blue,
                  height: 60,
                  width: double.infinity,
                  padding: EdgeInsets.all(16),
                  child: Text(
                    'Header',
                    style: TextStyle(
                      color: Colors.white,
                      fontSize: 24,
                      fontWeight: FontWeight.bold,
                    ),
                  ),
                ),
                // Content
                Expanded(
                  child: Container(
                    color: Colors.white,
                    padding: EdgeInsets.all(16),
                    child: Text(
                      'Content Area',
                      style: TextStyle(
                        fontSize: 18,
                      ),
                    ),
                  ),
                ),
              ],
            ),
          ),
        ],
      ),
    );
  }
}
